<h1>{{google.firstName}}</h1>
<div class="row">
    {{#if google}}
    <div class="col s12">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                    {{foundUser.google.firstName}} {{foundUser.google.lastName}}
                </span>
                <img src="{{foundUser.google.image}}?sz=300" class="circle responsive-img">
            </div>
        </div>
    </div>
    {{/if}}
    {{#each stories}}

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-image">
                {{#if user}}
                {{{editIcon user.google.id ../user.google.id id true}}}
                {{/if}}
            </div>

            <div class="card-content ">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 100)}}</p>
            </div>
            <div class="card-action">
                <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
            </div>
        </div>



    </div>


    {{else}}
    <h5>No stories found</h5>
    {{/each}}
</div>
